<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下状态：稍微亮一点 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="26dp"
                android:centerColor="#664DA8FF"
                android:endColor="#CC4DA8FF" />
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="26dp"
                android:centerColor="#334DA8FF"
                android:endColor="#994DA8FF" />
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>

</selector>
